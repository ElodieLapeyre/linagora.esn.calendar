.cal-event-date-edition
  .col-xs-12
    .form-group
      .input-group
        span.input-group-addon
          i.mdi.mdi-clock
        .col-xs-12.col-md-4
          .form-group
            .fg-line
              input.input.form-control.date(type="text", size="10", ng-model="ctrl.event.start", data-autoclose="1", data-start-week="1", data-date-format="{{::ctrl.dateFormat}}", placeholder=__('Start date'), ng-change="ctrl.onStartDateChange()", ng-blur="ctrl.dateOnBlurFn()", bs-datepicker, aria-expanded="false", ng-disabled="ctrl.disabled", cal-date-to-moment)
            .fg-line(ng-if='!ctrl.full24HoursDay')
              input.input.form-control(type="text", size="10", ng-model="ctrl.event.start", data-autoclose="0", placeholder=__('Time'), ng-change="ctrl.onStartDateTimeChange()", ng-blur="ctrl.dateOnBlurFn()", lng-clockpicker, lng-clockpicker-options="{twelvehour: !ctrl.use24hourFormat}", aria-expanded="false", ng-disabled="ctrl.allDay || ctrl.disabled")
        .col-xs-12.col-md-4
          .form-group
            .fg-line
              input.input.form-control.date(type="text", size="10", class="form-control", ng-model="ctrl.event.end", data-autoclose="1", data-start-week="1", data-date-format="{{::ctrl.dateFormat}}", data-min-date="{{ctrl.getMinDate()}}", placeholder=__('End date'), ng-change="ctrl.onEndDateChange()", aria-expanded="false", ng-disabled="ctrl.disabled", ng-blur="ctrl.dateOnBlurFn()", bs-datepicker, cal-date-to-moment, cal-friendlify-end-date, data-is-all-day="ctrl.allDay")
            .fg-line(ng-if='!ctrl.full24HoursDay')
              input.input(type="text", size="10", class="form-control", ng-model="ctrl.event.end", data-autoclose="0", placeholder=__('Time'), ng-change="ctrl.onEndDateTimeChange()", aria-expanded="false", ng-disabled="ctrl.allDay || ctrl.disabled", ng-blur="ctrl.dateOnBlurFn()", lng-clockpicker, lng-clockpicker-options="{twelvehour: !ctrl.use24hourFormat}")
        .col-xs-12.col-md-4.hidden-xs
          .form-group.text-center
            .fg-line.nopadding
              .checkbox.allday
                label
                  input(type="checkbox", ng-model='ctrl.full24HoursDay', ng-disabled="ctrl.disabled", ng-change="ctrl.allDayOnChange();")
                  i.input-helper
                  span #{__('All day')}
        .col-xs-12.col-md-4.visible-xs
          .form-group.nopadding
            .fg-line
              .checkbox.allday
                label
                  input(type="checkbox", ng-model='ctrl.full24HoursDay', ng-disabled="ctrl.disabled", ng-change="ctrl.allDayOnChange();")
                  i.input-helper
                  span #{__('All day')}

