.modal.full-screen.cal-event-date-suggestion-modal(tabindex="-1", role="dialog")
  form.suggest-form(role="form", aria-hidden="true", ng-submit='submit()')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss="modal", aria-label="Close", ng-click="$hide()")
            span(aria-hidden="true") &times;
          h4.modal-title #{__("Propose new time")}

        .modal-body
          .col-xs-12
            cal-event-date-suggestion(event="event")

        .modal-footer.flex
          .flex-vertical-centered.flex-end
            button.btn.btn-link.color-default.close-button(type='button', ng-click="$hide()") #{__('Cancel')}
            button.btn.btn-primary.save.save-button(type='submit') #{__('Send')}
