.modal.calendar-delete-confirmation
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        h4.modal-title(ng-if="!ctrl.isShared") #{__('Remove calendar?')}
        h4.modal-title(ng-if="ctrl.isShared") #{__('Unsubscribe from calendar?')}
      .modal-body
        span(ng-if="!ctrl.isShared") #{__('This will remove the "%s" and all events it contains.', "{{::ctrl.calendarName}}")}
        span(ng-if="ctrl.isShared") #{__('This will unsubscribe you from the "%s" calendar.', "{{::ctrl.calendarName}}")}
      .modal-footer
        button.btn.btn-default(type="button", ng-click="$hide()") #{__('Cancel')}
        button.btn.btn-primary(type="button", ng-click="ctrl.delete(); $hide()") #{__('Accept')}