.partstat-buttons
  button.btn.btn-link.partstat-button.accepted(type='button', ng-click='ctrl.changeParticipation("ACCEPTED")', ng-class='{ "active": ctrl.isCurrentPartstat("ACCEPTED") }')
    i.mdi.mdi-check
    | #{__('Accept')}
  button.btn.btn-link.partstat-button.tentative(type='button', ng-click='ctrl.changeParticipation("TENTATIVE")', ng-class='{ "active": ctrl.isCurrentPartstat("TENTATIVE") }')
    i.mdi.mdi-help
    | #{__('Maybe')}
  button.btn.btn-link.partstat-button.declined(type='button', ng-click='ctrl.changeParticipation("DECLINED")', ng-class='{ "active": ctrl.isCurrentPartstat("DECLINED") }')
    i.mdi.mdi-close
    | #{__("Decline")}
  button.btn.btn-link.partstat-button.suggest(ng-if="ctrl.canSuggestChanges" type='button', ng-click='ctrl.showDateSuggestion()')
    i.mdi.mdi-clock
    | #{__("Propose new time")}
