.attendees-list.attendees-list-expanded
  .attendees-sublists
    .attendees-sublist(ng-if='ctrl.attendeesPerPartstat.ACCEPTED > 0')
      .attendees-sublist-title.accepted #{__('Accepted')}
      .attendees-sublist-body
        cal-attendee-item-consult(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'ACCEPTED' track by $index")
    .attendees-sublist(ng-if='ctrl.attendeesPerPartstat.DECLINED > 0')
      .attendees-sublist-title.declined #{__('Declined')}
      .attendees-sublist-body
        cal-attendee-item-consult(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'DECLINED' track by $index")
    .attendees-sublist(ng-if='ctrl.attendeesPerPartstat["NEEDS-ACTION"] > 0 || ctrl.attendeesPerPartstat["TENTATIVE"] > 0')
      .attendees-sublist-title.undecided #{__('Undecided')}
      .attendees-sublist-body
        cal-attendee-item-consult(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'NEEDS-ACTION' track by $index")
        cal-attendee-item-consult(attendee='attendee', can-modify-attendee='::ctrl.canModifyAttendees', is-organizer='ctrl.isOrganizer(attendee)', ng-click= "ctrl.selectAttendee(attendee)", ng-repeat="attendee in ctrl.attendees | partstat:'TENTATIVE' track by $index")
