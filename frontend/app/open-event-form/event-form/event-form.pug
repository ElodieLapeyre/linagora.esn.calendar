//- NOTE: When adding form controls that should change the event in this form,
//-       be sure to add them to the CAL_EVENT_MODIFY_COMPARE_KEYS constant, to
//-       make sure they are checked during modification.
form.event-form(role="form", aria-hidden="true", ng-class="{ 'readonly': !canModifyEvent}", ng-submit='submit()')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss="modal", aria-label="Close", ng-click="$hide()")
          span(aria-hidden="true") &times;
        h4.modal-title(ng-if='canModifyEvent && isNew(editedEvent)') #{__('Create a new event')}
        h4.modal-title(ng-if='canModifyEvent && !isNew(editedEvent)') #{__('Edit event')}
        h4.modal-title(ng-if='!canModifyEvent') #{__('Event details')}
      .modal-body
        .row
          .col-xs-12
            .form-group
              .fg-line
                input.input.title.form-control(type="text", ng-model='editedEvent.title', ng-model-options="{getterSetter: true}", maxlength="{{::CAL_EVENT_FORM.title.maxlength}}", placeholder=__('Title'), ng-readonly="!canModifyEvent")
          .col-xs-12
            .form-group
              .input-group
                span.input-group-addon
                  i.mdi.mdi-calendar-multiple
                .fg-line.select
                  select.form-control(ng-disabled="!isNew(editedEvent) || !canModifyEvent", ng-model='calendar', ng-options='calendar as calendar.name for calendar in calendars | filter: (isNew(editedEvent) || canModifyEvent) ? { readOnly: false } : {}')
          cal-event-date-edition(event="editedEvent", disabled='!canModifyEvent')
          .col-xs-12
            .form-group(ng-show="canModifyEvent || editedEvent.location")
              .input-group
                span.input-group-addon
                  i.mdi.mdi-map-marker
                .fg-line
                  input.input.location.form-control(type="text", ng-model='editedEvent.location', ng-model-options="{getterSetter: true}", maxlength="{{::CAL_EVENT_FORM.location.maxlength}}", placeholder=__('Location'), ng-readonly="!canModifyEvent")
          cal-attendees-autocomplete-input(ng-hide='!canModifyEventAttendees', original-attendees='editedEvent.attendees', mutable-attendees='newAttendees')
          .col-xs-12(ng-if='displayParticipationButton')
            .form-group.status.row
              .col-xs-12.text-center
                .btn-group(role="group")
                  button.btn.btn-link.accepted(type='button', ng-click='changeParticipation("ACCEPTED")', ng-class='{ "active": userAsAttendee.partstat === "ACCEPTED" }')
                    i.mdi.mdi-check
                    | #{__('Going')}
                  button.btn.btn-link.undecided(type='button', ng-click='changeParticipation("TENTATIVE")', ng-class='{ "active": userAsAttendee.partstat === "TENTATIVE" }')
                    i.mdi.mdi-help
                    | #{__('Maybe')}
                  button.btn.btn-link.declined(type='button', ng-click='changeParticipation("DECLINED")', ng-class='{ "active": userAsAttendee.partstat === "DECLINED" }')
                    i.mdi.mdi-close
                    | #{__("Cannot go")}

          .col-xs-12
            cal-attendees-list-condensed(ng-if='editedEvent.attendees.length > 1 || newAttendees.length > 0', attendees='editedEvent.attendees', can-modify-attendees='::canModifyEventAttendees', organizer='::editedEvent.organizer')
          .col-xs-12
            cal-mail-to-attendees(ng-if='displayCalMailToAttendeesButton()', event='editedEvent')
          .col-xs-12
            event-recurrence-edition(event="editedEvent", can-modify-event-recurrence='canModifyEventRecurrence')
          .col-xs-12
            cal-event-alarm-edition(event="editedEvent", can-modify-event= "canModifyEvent")
          .col-xs-12
            .form-group
              .input-group
                span.input-group-addon
                  i.mdi.mdi-lock
                .fg-line.select
                  select.form-control(ng-disabled="!canModifyEvent", ng-model='editedEvent.class', ng-options="class.value as (class.label | esnI18n) for class in CAL_EVENT_FORM.class.values")
          .col-xs-12
            .form-group
              .input-group
                span.input-group-addon.textarea-icon
                  i.mdi.mdi-calendar-text
                .fg-line
                  textarea.form-control(cal-auto-size-and-update, type="text", ng-model='editedEvent.description', placeholder=__('Notes...'), ng-readonly="!canModifyEvent")

      .modal-footer.flex
        .flex-vertical-centered.flex-start
          .delete-button(ng-if="canModifyEvent && (isInvolvedInATask(editedEvent) || !isNew(editedEvent))")
            button.btn.btn-link.btn-icon.color-danger.delete(type='button', ng-click="deleteEvent()", ng-disabled="!canPerformCall()")
              i.mdi.mdi-delete
        .flex-vertical-centered.flex-end
          button.btn.btn-link.color-default.close-button(type='button', ng-click="$hide()") #{__('Cancel')}
          button.btn.btn-primary.save.save-button(ng-if='canModifyEvent' type='submit', ng-disabled="!canPerformCall()") #{__('Save')}
