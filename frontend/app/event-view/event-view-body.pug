.cal-event-view-body
  .event-body
    .event-meta
      h4 #{__('Event Details')}
      .title.event-view-block
        i.mdi.mdi-calendar-multiple
        span( ng-bind-html="ctrl.event.summary")
      .date.event-view-block
        cal-event-date-consultation(event="ctrl.event")
      .location.event-view-block(ng-if="ctrl.event.location")
        i.mdi.mdi-map-marker
        .ellipsis
          | {{ctrl.event.location}}
      .description.event-view-block(ng-if="ctrl.event.description")
        i.mdi.mdi-format-align-justify
        span {{event.description}}
    .invitation-block
      h4 #{__('Invitations')}
      .participation-block
        .participation
          i.mdi.mdi-account-check
          .text-center
            .btn-group(role="group")
              button.btn.btn-link.accepted(type='button', ng-click='ctrl.changeParticipation("ACCEPTED")', ng-class='{ "active": ctrl.userAsAttendee.partstat === "ACCEPTED" }')
                i.mdi.mdi-check
              button.btn.btn-link.undecided(type='button', ng-click='ctrl.changeParticipation("TENTATIVE")', ng-class='{ "active": ctrl.userAsAttendee.partstat === "TENTATIVE" }')
                i.mdi.mdi-help
              button.btn.btn-link.declined(type='button', ng-click='ctrl.changeParticipation("DECLINED")', ng-class='{ "active": ctrl.userAsAttendee.partstat === "DECLINED" }')
                i.mdi.mdi-close
      div
        cal-attendee-tabs(selected-tab="ctrl.selectedTab")
        .cal-attendees-list
          cal-attendee-item-consult(
            ng-if="ctrl.selectedTab === 'attendees' && ctrl.attendees.users.length > 0",
            attendee='attendee',
            is-organizer='ctrl.isOrganizer(attendee)',
            is-external='ctrl.isExternal',
            ng-repeat="attendee in ctrl.attendees.users track by $index")

        cal-resource-list(
          ng-if="ctrl.selectedTab === 'resources' && ctrl.attendees.resources.length > 0",
          resources='ctrl.attendees.resources')
  .event-participation
    .btn-group(role="group")
      button.btn.btn-link.accepted(type='button', ng-click='ctrl.changeParticipation("ACCEPTED")', ng-class='{ "active": ctrl.userAsAttendee.partstat === "ACCEPTED" }')
        i.mdi.mdi-check
      button.btn.btn-link.undecided(type='button', ng-click='ctrl.changeParticipation("TENTATIVE")', ng-class='{ "active": ctrl.userAsAttendee.partstat === "TENTATIVE" }')
        i.mdi.mdi-help
      button.btn.btn-link.declined(type='button', ng-click='ctrl.changeParticipation("DECLINED")', ng-class='{ "active": ctrl.userAsAttendee.partstat === "DECLINED" }')
        i.mdi.mdi-close