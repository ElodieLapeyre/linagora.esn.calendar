.cal-calendar-shared-configuration-item
  .meta
    cal-attendee-avatar.attendee-avatar(attendee='$ctrl.item.user')
    .title
      .name
        span {{::$ctrl.item.calendar.name}}
      .owner
        span {{::$ctrl.item.user.displayName}}
  .rights
    cal-shared-rights-display(ng-if="$ctrl.item.type === 'public'", public="$ctrl.item.calendar.rights.getPublicRight()")
    cal-shared-rights-display(ng-if="$ctrl.item.type === 'delegation'", delegation="$ctrl.item.calendar.rights.getShareeRight($ctrl.user._id)")
  .actions
    toggle-switch(ng-model='$ctrl.item.isSelected')
