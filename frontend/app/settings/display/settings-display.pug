mixin settingsSwitch(title, rightLabel, leftLabel)
  p
    span #{__(title)}
  p.cal-setting-switch
    span.working-days-disabled(ng-class="{'toggle-active': " + attributes.switchValue + "}")
      | #{__(rightLabel)}
    toggle-switch(ng-model=attributes.switchValue, color='blue', form="form")
    span.working-days-enabled(ng-class="{'toggle-active': " + attributes.switchValue + "}")
      | #{__(leftLabel)}
sub-header
  cal-settings-display-subheader(submit="ctrl.submit()", form="form")

form(name="form")
  .cal-settings-display-block
    +settingsSwitch('Working days', 'Hide', 'Show')(switchValue="ctrl.configurations.workingDays")
    +settingsSwitch('Declined events', 'Show', 'Hide')(switchValue="ctrl.configurations.hideDeclinedEvents")